{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

{% if error %}
    <div style="color: #ff9999; margin: 10px 0;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" />

    <div>
        <span style="float: right;">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" style="width: auto; " />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" 
                   style="width: auto; margin-left: 20px; padding: 10px 40px;" />
        <span/>
    <div/>
</form>
                   
{% endblock fos_user_content %}